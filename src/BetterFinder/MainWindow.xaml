<Window x:Class="BetterFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterFinder"
        mc:Ignorable="d"
        Title="BetterFinder" Height="450" Width="600" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize" 
        KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Border BorderBrush="#444444" BorderThickness="1" CornerRadius="10" Background="#FF222222">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Suchleiste -->
            <Border Grid.Row="0" Background="#FF333333" Padding="10" BorderThickness="0,0,0,1" 
                    BorderBrush="#FF444444" CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Width="30" Height="30" Background="Transparent" BorderThickness="0" Margin="0,0,10,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" Foreground="White" FontSize="16"/>
                    </Button>
                    <Grid Grid.Column="1">
                        <TextBox x:Name="SearchBox" Height="30" Background="#FF222222" Foreground="White" BorderThickness="0"
                                VerticalContentAlignment="Center" FontSize="14" KeyDown="SearchBox_KeyDown"
                                TextChanged="SearchBox_TextChanged"/>
                        <TextBlock x:Name="PlaceholderText" Text="Suchen..." Foreground="#FF666666" 
                                Margin="5,0,0,0" VerticalAlignment="Center"
                                Visibility="Visible" IsHitTestVisible="False"/>
                    </Grid>
                    <Button Grid.Column="2" Width="30" Height="30" Background="Transparent" BorderThickness="0" Margin="10,0,0,0"
                            Click="CloseButton_Click">
                        <TextBlock Text="âœ•" Foreground="White" FontSize="16"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Dateiliste -->
            <ListView Grid.Row="1" Background="#FF222222" Foreground="White" BorderThickness="0"
                      Name="FileListView" SelectionChanged="FileListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Width="16" Height="16" Source="{Binding Icon}" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding Path}" Foreground="#FF888888" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Statusbar -->
            <StatusBar Grid.Row="2" Background="#FF333333" Foreground="White" Height="25"
                      BorderBrush="#FF444444" BorderThickness="0,1,0,0">
                <StatusBarItem>
                    <TextBlock Name="StatusText" Text="Bereit"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Border>
</Window> 