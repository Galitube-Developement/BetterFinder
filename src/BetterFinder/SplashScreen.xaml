<Window x:Class="BetterFinder.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterFinder"
        mc:Ignorable="d"
        Title="BetterFinder" Height="350" Width="500" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Border BorderBrush="#444444" BorderThickness="1" CornerRadius="10" Background="#FF222222">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0" Text="BetterFinder" FontSize="24" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>

            <!-- Fortschrittsanzeige -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock x:Name="StatusText" Text="Starte Indizierung..." Foreground="White" 
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar x:Name="IndexingProgress" Height="10" IsIndeterminate="True" 
                            Background="#333333" Foreground="#0078D7"/>
                <TextBlock x:Name="FileCountText" Text="0 Dateien indiziert" Foreground="#AAAAAA" 
                          HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12"/>
            </StackPanel>

            <!-- Aktuelle Laufwerke/Verzeichnisse -->
            <TextBlock Grid.Row="2" x:Name="CurrentDriveText" Text="" Foreground="#888888" 
                      HorizontalAlignment="Center" Margin="5,5,5,0"/>
            <TextBlock Grid.Row="2" x:Name="CurrentFolderText" Text="" Foreground="#666666" 
                      HorizontalAlignment="Center" Margin="5,25,5,5" TextWrapping="Wrap" MaxWidth="450" FontSize="11"/>

            <!-- Option zum vollständigen Indizieren -->
            <CheckBox Grid.Row="3" x:Name="IndexEverythingCheckbox" Content="Auch System datein indexieren" 
                     Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,5" 
                     Checked="IndexEverythingCheckbox_Checked" Unchecked="IndexEverythingCheckbox_Unchecked"/>


            <!-- Hinweis -->
            <TextBlock Grid.Row="5" Text="Bitte warten Sie, während alle Dateien indiziert werden..." 
                      Foreground="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center"
                      TextWrapping="Wrap" MaxWidth="400"/>
        </Grid>
    </Border>
</Window> 