<Window x:Class="BetterFinder.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterFinder"
        mc:Ignorable="d"
        Title="BetterFinder" Height="350" Width="480" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Icon="/Resources/BetterFinder-Icon.png">
    <Border BorderBrush="#444444" BorderThickness="1" CornerRadius="10" Background="#FF222222">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header mit Logo -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <Image Source="/Resources/BetterFinder-Icon.png" Width="64" Height="64" Margin="0,0,15,0"/>
                <TextBlock Text="BetterFinder" FontSize="24" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Indexierung der Dateien..." Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,15" TextWrapping="Wrap"/>
                <ProgressBar x:Name="IndexingProgressBar" Height="10" Margin="0,5" 
                             Foreground="#0078D7" Background="#333333" IsIndeterminate="True"/>
                <TextBlock x:Name="IndexingStatus" Text="Initialisiere..." Foreground="#AAAAAA" 
                           HorizontalAlignment="Center" Margin="0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="FileCount" Text="0 Dateien indiziert" Foreground="#AAAAAA" 
                           HorizontalAlignment="Center" Margin="0,5" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Settings -->
            <CheckBox Grid.Row="2" x:Name="IndexSystemFilesCheckbox" Content="Systemdateien indizieren" 
                      Foreground="White" Margin="0,20,0,0" Checked="IndexSystemFilesCheckbox_Checked"
                      Unchecked="IndexSystemFilesCheckbox_Unchecked"/>

            <!-- Warning for system files -->
            <Border Grid.Row="3" x:Name="SystemFilesWarning" BorderThickness="1" 
                    BorderBrush="#FFCC00" Background="#332200" CornerRadius="5" 
                    Padding="10" Margin="0,10,0,0" Visibility="Collapsed">
                <TextBlock Text="Warnung: Das Indizieren von Systemdateien kann die Indizierungszeit erheblich verlÃ¤ngern und mehr Speicherplatz beanspruchen."
                           Foreground="#FFCC00" TextWrapping="Wrap"/>
            </Border>
            
            <!-- Start Searching Button -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="StartSearchingButton" Content="Jetzt mit der Suche beginnen" 
                        Padding="15,8" Background="#0078D7" Foreground="White" BorderThickness="0"
                        Click="StartSearchingButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 